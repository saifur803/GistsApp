<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_size"
    android:orientation="vertical"
    tools:context=".ui.gistDetails.GistDetailActivity">

    <ImageView
        android:id="@+id/gist_favourite_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_favourite" />

    <TextView
        android:id="@+id/details_gist_filename_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:textSize="@dimen/text_large_size" />

    <TextView
        android:id="@+id/details_gist_url_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:layout_marginTop="@dimen/margin_size"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/details_created_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:layout_marginTop="@dimen/margin_size"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/details_updated_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:layout_marginTop="@dimen/margin_size"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/details_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:layout_marginTop="@dimen/margin_size"
        android:textColor="@color/textColor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/textColor"
        android:layout_marginTop="@dimen/margin_large_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large_size"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/details_user_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gist_username_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size"
                android:textColor="@color/textColor"
                android:textStyle="italic"
                android:layout_marginTop="@dimen/margin_small_size" />

            <TextView
                android:id="@+id/gist_count_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size"
                android:textStyle="italic"
                android:textColor="@color/textColor" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>